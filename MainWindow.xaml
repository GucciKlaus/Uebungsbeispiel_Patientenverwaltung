<Window x:Class="Uebungsbeispiel_Patientenverwaltung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uebungsbeispiel_Patientenverwaltung"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.415,0.537">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="2">
            <MenuItem Header="File">
                <MenuItem Name="Open" Header="Open" Click="MenuItemOpen_Click"></MenuItem>
                <MenuItem Name="Save"  Header="Save" Click="MenuItemSave_Click"></MenuItem>
                <MenuItem Name="Close" Header="Close" Click="MenuItemClose_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Info"></MenuItem>
        </Menu>
        <Label Content="Vorname:" HorizontalAlignment="Left" Margin="75,117,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Grid.Column="1" Content="Nachname:" HorizontalAlignment="Left" Margin="75,148,0,0" VerticalAlignment="Top"/>
        <Label Grid.Column="1" Content="Geburtsdatum:" HorizontalAlignment="Left" Margin="75,180,0,0" VerticalAlignment="Top"/>
        <TextBox Name="firstname" Grid.Column="1" HorizontalAlignment="Left" Margin="168,121,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="lastname" Grid.Column="1" HorizontalAlignment="Left" Margin="168,152,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <DatePicker Name="datepicker" Grid.Column="1" HorizontalAlignment="Left" Margin="168,181,0,0" VerticalAlignment="Top" Height="24" Width="120"/>
        <CheckBox Name="bedwetter" Grid.Column="1" Content="Bettnässer" HorizontalAlignment="Left" Margin="168,311,0,0" VerticalAlignment="Top"/>

        <Button Name="addButton" Grid.Column="1" HorizontalAlignment="Left" Margin="319,121,0,0" VerticalAlignment="Top" Height="96" Width="123" Click="addButton_Click">
            <Button.Content>
                <Image Source="/Arrow.jpg"></Image>
            </Button.Content>
        </Button>
        <GroupBox Grid.Column="1" Header="Gender" Margin="168,217,338,111">
            <Grid Height="53" Margin="0,0,-2,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="22*"/>
                    <ColumnDefinition Width="21*"/>
                </Grid.ColumnDefinitions>
                <RadioButton Name="radioman" Content="Männlich" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="15" Width="68"/>
                <RadioButton Name="radiowomen" Content="Weiblich" HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top" Height="15" Width="64"/>
            </Grid>
        </GroupBox>
        <ListBox Name="listbox" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="447,69,10,149" SelectionChanged="listbox_SelectionChanged"/>
        <Button Name="deleteButton" Grid.Column="1" Content="Patient löschen" HorizontalAlignment="Left" Margin="500,290,0,0" VerticalAlignment="Top" Click="deleteButton_Click"/>


    </Grid>
</Window>
